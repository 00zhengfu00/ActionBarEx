            tools:av_icon="@color/text_color_def" />

        <per.goweii.actionbarex.common.ActionView
            android:id="@+id/av_left4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:av_icon="@color/text_color_def"
            tools:visibility="visible" />

        <per.goweii.actionbarex.common.ActionView
            android:id="@+id/av_left5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:av_icon="@color/text_color_def"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <per.goweii.actionbarex.common.ActionView
            android:id="@+id/av_right1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:av_icon="@color/text_color_def"
            tools:visibility="visible" />

        <per.goweii.actionbarex.common.ActionView
            android:id="@+id/av_right2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:av_icon="@color/text_color_def"
            tools:visibility="visible" />

        <per.goweii.actionbarex.common.ActionView
            android:id="@+id/av_right3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
